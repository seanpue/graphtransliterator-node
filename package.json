{
  "name": "graphtransliterator",
  "version": "0.7.0",
  "description": "A graph-based transliterator for Javascript",
  "homepage": "https://github.com/seanpue/graphtransliterator-js",
  "author": {
    "name": "A. Sean Pue",
    "email": "pue@msu.edu",
    "url": "https://seanpue.com"
  },
  "files": [
    "lib",
    "dist"
  ],
  "main": "lib/index.js",
  "keywords": [
    "transliteration"
  ],
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-loader": "^8.1.0",
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.8.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add . && lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest",
    "update-transliterators": "node scripts/updateTransliterators.js",
    "build": "webpack"
  },
  "repository": "seanpue/graphtransliterator-js",
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage"
  },
  "license": "MIT",
  "dependencies": {}
}
